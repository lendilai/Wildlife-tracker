{{#block "links"}}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.3/css/mdb.min.css" rel="stylesheet">
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.3/js/mdb.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
{{/block}}
{{#partial "content"}}
<a href="/"><i class="fas fa-arrow-left"></i></a>
<div class="text-center">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#animal" role="tab" aria-controls="home" aria-selected="true">Animal</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#species" role="tab" aria-controls="profile" aria-selected="false">Species</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#ranger" role="tab" aria-controls="contact" aria-selected="false">Ranger</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#location" role="tab" aria-controls="contact" aria-selected="false">Location</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="animal" role="tabpanel" aria-labelledby="home-tab">
            <form action="/info/animal/new" method="post">
                <div class="modal-dialog cascading-modal" role="document">
                    <div class="modal-content">
                        <div class="modal-header warning-color-dark white-text">
                            <h4 class="title">
                                <i class="fas fa-paw"></i> Animal Info</h4>
                        </div>
                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="fas fa-signature all"> Animal Name</i>
                                <input type="text" name="name" required class="form-control form-control-sm" placeholder="e.g. Lion">
                            </div>
                            <div class="md-form form-sm">
                                <i class="fas fa-crosshairs all"> Endangered </i>
                                <select class="form-control" name="boolean">
                                    <option>True</option>
                                    <option>False</option>
                                </select>
                            </div>
                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-amber" type="submit">Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="species" role="tabpanel" aria-labelledby="profile-tab">
            <form action="/info/species/new" method="post">
                <div class="modal-dialog cascading-modal" role="document">
                    <div class="modal-content">
                        <div class="modal-header success-color-dark white-text">
                            <h4 class="title">
                                <i class="fas fa-fingerprint"></i> Species Info</h4>
                        </div>
                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="fas fa-fingerprint all">Species name </i>
                                <input type="text" required name="species" class="form-control form-control-sm" placeholder="e.g. Panthera leo">
                            </div>
                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-dark-green" type="submit">Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="ranger" role="tabpanel" aria-labelledby="contact-tab">
            <form action="/info/ranger/new" method="post">
                <div class="modal-dialog cascading-modal" role="document">
                    <div class="modal-content">
                        <div class="modal-header brown white-text">
                            <h4 class="title">
                                <i class="fas fa-tree"></i> Ranger Info</h4>
                        </div>
                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="fas fa-tree all"> Ranger Name</i>
                                <input type="text" name="ranger" required placeholder="e.g. John Doe" class="form-control form-control-sm">
                            </div>
                            <div class="md-form form-sm">
                                <i class="far fa-id-badge all"> Badge Number</i>
                                <input type="number" name="badge" required placeholder="e.g.547" class="form-control form-control-sm">
                            </div>
                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-brown" type="submit">Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="location" role="tabpanel" aria-labelledby="contact-tab">
            <form action="/info/location/new" method="post">
                <div class="modal-dialog cascading-modal" role="document">
                    <div class="modal-content">
                        <div class="modal-header blue-grey white-text">
                            <h4 class="title">
                                <i class="fas fa-map-marked-alt"></i> Location Info</h4>
                        </div>
                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="far fa-compass all"> Location</i>
                                <input type="text" name="location" required placeholder="e.g. Central Waterhole" class="form-control form-control-sm">
                            </div>
                            <div class="text-center mt-4 mb-2">
                                <button class="btn btn-outline-blue-grey" type="submit">Add
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{/partial}}
{{> layout.hbs}}